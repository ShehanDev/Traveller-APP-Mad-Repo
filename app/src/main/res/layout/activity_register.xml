<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".common.Register">
    <ImageView
        android:id="@+id/iv1"
        android:layout_width="407dp"
        android:layout_height="144dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo1" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Register"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv1" />

    <EditText
        android:id="@+id/efullname"
        android:layout_width="294dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:hint="Full-Name"
        android:inputType="textPersonName|text"
        android:textColorHint="#57606f"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv4"
        app:layout_constraintVertical_bias="0.469" />

    <EditText
        android:id="@+id/ePhone"
        android:layout_width="294dp"
        android:layout_height="43dp"
        android:layout_marginTop="280dp"
        android:hint="Phone_ no"
        android:inputType="phone"
        android:textColorHint="#57606f"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv4" />

    <EditText
        android:id="@+id/eUserName"
        android:layout_width="294dp"
        android:layout_height="43dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="12dp"
        android:hint="User-Name"
        android:inputType="textPersonName|text"
        android:textColorHint="#57606f"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/efullname" />

    <EditText
        android:id="@+id/eEmail"
        android:layout_width="294dp"
        android:layout_height="43dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="96dp"
        android:inputType="textEmailAddress"
        android:textColorHint="#57606f"
        android:hint="E-maill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eUserName" />

    <EditText
        android:id="@+id/ePassword"
        android:layout_width="294dp"
        android:layout_height="43dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:hint="Password"
        android:textColorHint="#57606f"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eEmail"
    />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="97dp"
        android:layout_height="39dp"
        android:layout_marginTop="172dp"
        android:onClick="logintoReg"
        android:text="Sigin_In"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ePassword"

        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="181dp"
        android:layout_height="43dp"
        android:layout_marginTop="52dp"
        android:text="@string/alredy_registerd_log_in"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.813"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignIn" />


</androidx.constraintlayout.widget.ConstraintLayout>